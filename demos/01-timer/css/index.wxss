* {
  padding: 0px;
  margin: 0px;
  box-sizing: border-box;
}
body {
  width: 100vw;
  height: 100vh;
  background: url("../wallpaper.png") no-repeat;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  user-select: none;
}
.date {
  margin-top: 100px;
  width: 100%;
  text-align: center;
  font-size: 50px;
}
.timer-box {
  margin-top: 50px;
  padding: 10px;
}
.timer-box li {
  list-style: none;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.timer-box li ul {
  margin: 10px;
  text-align: center;
}
.timer-box li ul .time-font {
  font-size: 40px;
}
