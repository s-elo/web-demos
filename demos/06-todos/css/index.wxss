@font-face {
  font-family: 'Poppins';
  font-style: normal;
  font-weight: 400;
  font-display: swap;
  src: url(https://fonts.gstatic.com/s/poppins/v15/pxiEyp8kv8JHgFVrFJA.ttf) format('truetype');
}
.shadow-box {
  box-shadow: 0 0 3px 3px rgba(0, 0, 0, 0.1);
}
.scroll-bar::-webkit-scrollbar {
  width: 0.5rem;
  height: 0.5rem;
  border-radius: 15px;
}
.scroll-bar::-webkit-scrollbar-track {
  border-radius: 15px;
  background-color: transparent;
}
.scroll-bar::-webkit-scrollbar-thumb {
  box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.5);
  border-radius: 15px;
  background-color: transparent;
}
* {
  padding: 0px;
  margin: 0px;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
  user-select: none;
}
body {
  width: 100vw;
  height: 100vh;
  background-color: #ecf0f1;
}
.container {
  width: fit-content;
  height: fit-content;
  margin: auto;
  padding-top: 100px;
}
.container input {
  width: 25rem;
  height: 2rem;
  outline: none;
  border: none;
  border-radius: 5px;
  box-shadow: 0 0 3px 3px rgba(0, 0, 0, 0.1);
  padding: 3px 3px;
  margin: 10px 0;
}
.container ul {
  margin-bottom: 10px;
}
.container li {
  width: 25rem;
  list-style: none;
  background-color: #fff;
  border-top: 1px solid #bdc3c7;
  height: 1.5rem;
  line-height: 1.5rem;
  padding: 0 5px;
  border-radius: 10px;
  font-size: 0.8rem;
  margin-bottom: 5px;
  box-shadow: 0 0 3px 3px rgba(0, 0, 0, 0.1);
}
.container .reminder {
  font-size: 0.8rem;
  color: #bdc3c7;
  text-align: center;
}
.container .marked {
  text-decoration: line-through;
  color: #bdc3c7;
}
